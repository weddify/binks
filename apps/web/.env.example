# ============================================
# BINKS - Environment Variables Template
# ============================================
# Copy this file to .env and fill in your values
# ============================================
# DATABASE - Supabase
# ============================================
# Get these from: Supabase Dashboard > Project Settings > Database
DATABASE_URL="postgresql://postgres.[PROJECT-REF]:[PASSWORD]@aws-0-[REGION].pooler.supabase.com:6543/postgres?pgbouncer=true"
# DIRECT_URL="postgresql://postgres.[PROJECT-REF]:[PASSWORD]@aws-0-[REGION].pooler.supabase.com:5432/postgres"
# Supabase Project Keys
# Get these from: Supabase Dashboard > Project Settings > API Keys
# New keys use format: sb_publishable_xxx and sb_secret_xxx
PUBLIC_SUPABASE_URL="https://[PROJECT-REF].supabase.co"
# Publishable Key (safe for client-side, replaces legacy 'anon' key)
PUBLIC_SUPABASE_PUBLISHABLE_KEY="sb_publishable_..."
# Secret Key (server-side only, replaces legacy 'service_role' key)
SUPABASE_SECRET_KEY="sb_secret_..."
# NOTE: Legacy keys (anon_key, service_role_key) are still supported during transition
# If your project still uses legacy keys, use:
# PUBLIC_SUPABASE_ANON_KEY="eyJ..."
# SUPABASE_SERVICE_ROLE_KEY="eyJ..."
# ============================================
# AUTHENTICATION - Better Auth
# ============================================
# Generate with: openssl rand -base64 32
BETTER_AUTH_SECRET="your-super-secret-key-min-32-chars"
# Public URL of your app (for callbacks, emails)
BETTER_AUTH_URL="binks.pages.dev"
# Email/Password Settings
BETTER_AUTH_EMAIL_VERIFICATION=true
# ============================================
# SOCIAL LOGIN (Optional)
# ============================================
# Google OAuth - https://console.developers.google.com
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
# Telegram Login - @BotFather
PUBLIC_TELEGRAM_BOT_USERNAME=""
TELEGRAM_BOT_TOKEN=""
# ============================================
# PAYMENT GATEWAY - Pakasir
# ============================================
# Get these from: https://app.pakasir.com
PAKASIR_PROJECT_SLUG="your-project-slug"
PAKASIR_API_KEY="your-api-key"
PAKASIR_SANDBOX_MODE=true
# Webhook URL (set this in Pakasir dashboard)
# Production: https://yourdomain.com/api/webhooks/pakasir
# Development: Use ngrok or similar tunnel
# ============================================
# EMAIL (Optional - for notifications)
# ============================================
# SMTP settings for transactional emails
SMTP_HOST=""
SMTP_PORT=587
SMTP_USER=""
SMTP_PASSWORD=""
SMTP_FROM="noreply@yourdomain.com"
# Or use Resend
RESEND_API_KEY=""
# ============================================
# APP CONFIGURATION
# ============================================
PUBLIC_APP_NAME="Binks"
PUBLIC_APP_URL="http://localhost:5173"
# Service fee for each transaction (in IDR)
SERVICE_FEE=1500
# Order expiry time in minutes
ORDER_EXPIRY_MINUTES=60